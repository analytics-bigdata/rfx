<?xml version="1.0" encoding="UTF-8" ?>
<WorkerConfigs classpath="rfx.core.configs.WorkerConfigs" type="object" >

	<workerGroupName>local</workerGroupName>
	
	<!-- the shell-script for start workers -->
	<startWorkerScriptPath>		
		deploy/start-worker.sh
	</startWorkerScriptPath>
		
	<!-- where the debug/info/error logs store -->
	<debugLogPath>/home/trieunt/data/log</debugLogPath>
	
	<!-- the allocated TCP for workers -->	
	<allocatedWorkers type="list" >			
		<!-- empty workers -->
		<worker id="w1">
			<hostName>127.0.0.1</hostName>
			<port>14001</port>
			<mainClass>sample.hello.HelloWorker</mainClass>
		</worker>
		<worker>
			<hostName>127.0.0.1</hostName>
			<port>14002</port>
			<mainClass>sample.hello.OtherWorker</mainClass>
		</worker>
	</allocatedWorkers>
		
</WorkerConfigs>